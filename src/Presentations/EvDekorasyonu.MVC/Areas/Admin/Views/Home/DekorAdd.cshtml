@using EvDekorasyonu.Application.Interfaces

@model DekorDto

@inject IDekorCategoryService _categoryService;
<div class="content" style="padding: 12% 29% 340px 34%;">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row" style="display: flex;justify-content: center;align-items: center;">
                        <h3 class="mt-3">Dekor Add Screen</h3>
                    </div>
                </div>
                <div class=" card-body">
                    <form asp-action="DekorAdd" asp-controller="Home" asp-area="Admin" method="POST">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="Name" class="form-label" for="name"></label>
                                    <input asp-for="Name" id="name" class="form-control" placeholder="Pizza" type="text"/>
                                </div>

                            </div>
                        </div>
                        <div class=" row">
                            <div class=" col-md-12">
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="Star" class="form-label" for="star"></label>
                                    <input asp-for="Star" id="star" class="form-control" placeholder="3" type="text"/>
                                </div>
                            </div>
                        </div>
                        <div class=" row">
                            <div class=" col-md-12">
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="Description" class="form-label" for="description"></label>
                                    <input asp-for="Description" id="description" class="form-control" placeholder="Pizza is very good" type="text"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-check form-switch d-flex align-items-center mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActive">
                            <label class="form-check-label mb-0 ms-2" for="isActive">Is Active</label>
                        </div>
                        <div class="row">
                            <div class=" col-md-12">
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="ImageUrl" class="form-label" for="imageUrl"></label>
                                    <input asp-for="ImageUrl" id="imageUrl" class="form-control" placeholder="/assets/images/1.jpg" type="text"/>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class=" col-md-12">
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label" for="DekorCategoryId"></label>
                                    @{
                                        var items = (await _categoryService.GetDekorCategoryAllAsync()).Select(x=>
                                        new SelectListItem{
                                                          Text = x.Name,
                                                          Value=x.Id.ToString()              
                                        });
                                    }
                                    <select asp-for="DekorCategoryId" asp-items="items" class="form-control" name="DekorCategoryId" id="DekorCategoryId">
                                        <option selected="selected" disabled="disabled" value="">Bir kategori seçiniz</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class=" card-footer">
                            <button class="btn btn-fill btn-warning float-end" type="submit">Add</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>